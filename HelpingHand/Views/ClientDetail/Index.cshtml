@model IEnumerable<HelpingHand.Models.ClientDetail>

@{
    ViewBag.Title = "Manage Customer";
}



<!-- Data tables -->
<script type="text/javascript" src="~/Content/assets/node_modules/datatables.net/js/jquery.dataTables.js"></script>
<script type="text/javascript" src="~/Content/assets/node_modules/datatables-responsive/js/dataTables.responsive.js"></script>

<div class="doc data-table-doc page-layout simple full-width">

    <!-- HEADER -->
    <div class="page-header bg-primary text-auto p-6 row no-gutters align-items-center justify-content-between">
        <h1 class="doc-title h4" id="content">@ViewBag.Title</h1>

        <div class="col-auto">
            @*<a href="apps-e-commerce-product.html" class="btn btn-light">ADD NEW </a>*@
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-light fuse-ripple-ready" })
        </div>

    </div>

    <!-- / HEADER -->
    <!-- CONTENT -->
    <div class="page-content p-6">
        <div class="content container">
            <div class="row">

                <div class="col-12">
                    <div class="example ">
                        <div class="description">
                            <div class="description-text">

                                <h3>Customers list</h3>

                            </div>
                            <div class="toggle-source-preview">
                            
                                <i class="icon icon-eye-outline"></i>
                            </div>
                        </div>
                        <div class="source-preview-wrapper">
                            <div class="preview">
                                <div class="preview-elements">

                                    <table id="tbl" class="table">
                                        <thead>
                                            <tr>
                                                <th class="secondary-text">
                                                    <div class="table-header">
                                                        <span class="column-title">  @Html.DisplayNameFor(model => model.ClientName)</span>
                                                    </div>
                                                </th>
                                                <th class="secondary-text">
                                                    <div class="table-header">
                                                        <span class="column-title">  @Html.DisplayNameFor(model => model.Address1)</span>
                                                    </div>
                                                </th>

                                                <th class="secondary-text">
                                                    <div class="table-header">
                                                        <span class="column-title">   @Html.DisplayNameFor(model => model.Mobile)</span>
                                                    </div>
                                                </th>
                                                <th class="secondary-text">
                                                    <div class="table-header">
                                                        <span class="column-title">  @Html.DisplayNameFor(model => model.Email)</span>
                                                    </div>
                                                </th>
                                              
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.ActionLink(item.ClientName, "Edit", new { id = item.ClientId }, new { @class = "link" })
                                                        @*<a href="/CompanyMaster/Edit/@item.CompanyId"> @Html.DisplayFor(modelItem => item.CompanyName)</a>*@

                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Address1)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Mobile)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Email)
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- CONTENT -->

</div>

<!-- Data tables -->
<script type="text/javascript" src="~/Content/assets/node_modules/datatables.net/js/jquery.dataTables.js"></script>
<script type="text/javascript" src="~/Content/assets/node_modules/datatables-responsive/js/dataTables.responsive.js"></script><!-- Data tables -->
<script type="text/javascript" src="~/Content/assets/node_modules/datatables.net/js/jquery.dataTables.js"></script>
<script type="text/javascript" src="~/Content/assets/node_modules/datatables-responsive/js/dataTables.responsive.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.18/css/jquery.dataTables.min.css" />
<script href="https://cdn.datatables.net/1.10.18/js/jquery.dataTables.min.js"></script>
<script href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css"></script>
<script href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css"></script>
<script>
    var oTable = $('#tbl').dataTable({
        "bServerSide": true,
        "sAjaxSource": "/ClientDetail/GetPatientList",
        "sServerMethod": "POST",
        "aoColumns": [
            { "mData": "ClientName" },
            { "mData": "Address1" },
            { "mData": "Mobile" },
            { "mData": "Email" },
        ],
    });
</script>  