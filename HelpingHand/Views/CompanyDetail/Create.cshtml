@model HelpingHand.Models.CompanyDetail

@{
    ViewBag.Title = "Manage Company";
}
<div class="doc forms-doc page-layout simple full-width">
    <div class="page-header bg-primary text-auto p-6 row no-gutters align-items-center justify-content-between">
        <h1 class="doc-title h4" id="content">@ViewBag.Title</h1>
    </div>
    <div class="page-content p-6">
        <div class="content container">
            <div class="row">
                <div class="col-12 col-md-12">
                    <div class="example">
                        <div class="description">
                            <div class="description-text">
                                <h5> Create Company </h5>
                            </div>
                        </div>
                        <div class="source-preview-wrapper">
                            <div class="preview">
                                <div class="preview-elements">
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <div class="form-group">
                                                    @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.LabelFor(model => model.CompanyName)
                                                    @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "invalid-feedback" })
                                                </div>
                                                <div class="form-group">
                                                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.LabelFor(model => model.Address)
                                                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "invalid-feedback" })
                                                </div>
                                                <div class="form-group">
                                                    @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.LabelFor(model => model.City)
                                                    @Html.ValidationMessageFor(model => model.City, "", new { @class = "invalid-feedback" })
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <div class="form-group">
                                                    @Html.EditorFor(model => model.PIN, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.LabelFor(model => model.PIN)
                                                    @Html.ValidationMessageFor(model => model.PIN, "", new { @class = "invalid-feedback" })

                                                </div>
                                                <div class="form-group">
                                                    @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.LabelFor(model => model.Telephone)
                                                    @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "invalid-feedback" })

                                                </div>
                                                <div class="form-group">
                                                    @Html.EditorFor(model => model.VAT, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.LabelFor(model => model.VAT)
                                                    @Html.ValidationMessageFor(model => model.VAT, "", new { @class = "invalid-feedback" })

                                                </div>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Create </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>